@model System.Collections.Generic.List<int> /* Talar om vilken typ det ska vara*/
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h3>
            Gissa talet
        </h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()                       // GER FELMEDDELANDE FRÅN ADDMODELERROR
        @Html.AntiForgeryToken()

        <label for="number"> Ange nytt tal</label>
        <input type="text" name="number" />
        <button type="submit">Skicka</button>
    }

    <!-- Skriv ut listan-->
    @if (Model !=null)
    {<ol>
    @foreach (var item in Model)
	{
		 <li>@item</li>
	}</ol>
        
    }
</body>
</html>
