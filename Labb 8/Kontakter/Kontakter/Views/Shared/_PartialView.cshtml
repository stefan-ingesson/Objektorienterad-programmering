        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Spara" class="btn btn-success btn-sm" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Tillbaka till Startsidan", "Index", "Home", new { @class = "btn btn-info btn-xl" })
    </div>
</div>



